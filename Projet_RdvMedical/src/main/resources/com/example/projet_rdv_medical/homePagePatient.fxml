<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projet_rdv_medical.HomePagePatient">

    <!-- Top Border with Disconnect Button and Logo -->
    <top>
        <AnchorPane prefHeight="90.0" style="-fx-background-color: #0E1036FF;">
            <children>
                <!-- Home Page Label -->
                <Label alignment="CENTER" layoutY="27.0" prefHeight="33.0" text="Home Page" textFill="WHITE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <!-- Disconnect Button -->
                <Button layoutY="10.0" onAction="#disconnectButtonOnAction" text="Disconnect" AnchorPane.rightAnchor="10.0" />
            </children>
        </AnchorPane>
    </top>


    <!-- Center Content -->
    <center>
        <!-- Your Content Goes Here -->
        <VBox alignment="CENTER" spacing="10">
            <Button onAction="#searchAppointmentPageButtonOnAction" text="Search appointment">
            <font>
                <Font size="20" />
            </font>
            </Button>
            <Button text="Check last consultations">
            <font>
                <Font size="20" />
            </font>
            </Button>
            <Button onAction="#searchDoctorButtonOnAction" text="Search doctor">
                <font>
                    <Font size="20" />
                </font>
            </Button>
            <Button onAction="#modifyAccountButtonOnAction" text="Modify profile">
                <font>
                    <Font size="20" />
                </font>
            </Button>
        </VBox>
    </center>

</BorderPane>

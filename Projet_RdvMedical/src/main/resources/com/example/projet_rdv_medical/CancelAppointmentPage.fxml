<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projet_rdv_medical.CancelAppointmentController"
            prefHeight="200.0" prefWidth="400.0">

    <VBox alignment="CENTER" spacing="10"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50"
          AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
        <Label text="Are you sure you want to cancel this appointment?"
               style="-fx-font-size: 14pt;" />
        <HBox spacing="20" alignment="CENTER">
            <Button text="Yes" onAction="#confirmCancelAction" />
            <Button text="No" onAction="#cancelAction" />
        </HBox>
    </VBox>

</AnchorPane>